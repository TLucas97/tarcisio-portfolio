/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

* {
	box-sizing: border-box;
}

html,
body {
	height: 100%;
	width: 100%;
}

::-webkit-scrollbar {
	width: 5px;
}

::-webkit-scrollbar-thumb {
	background-color: #8bc6ec;
}

::-webkit-scrollbar-track {
	background-color: rgba(209, 213, 219, 0.8);
}
